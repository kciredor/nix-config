# General.
set timeout    = 10
set sleep_time = 0
unset beep

# List.
set pager_index_lines = 15
set auto_tag
set menu_scroll
unset confirmappend
unset resolve
unset mark_old

# Read.
unset markers

# Compose.
set sig_on_top
unset sig_dashes

# Reply.
set fast_reply
set include
set reply_to

# Colors.
color sidebar_unread yellow default
